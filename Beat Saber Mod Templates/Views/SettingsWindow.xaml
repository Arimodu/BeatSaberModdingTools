<Window x:Class="BeatSaberModTemplates.Views.SettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeatSaberModTemplates.Views"
             xmlns:vm="clr-namespace:BeatSaberModTemplates.ViewModels"
             xmlns:models="clr-namespace:BeatSaberModTemplates.Models"
             xmlns:converters="clr-namespace:BeatSaberModTemplates.Converters"
             mc:Ignorable="d"
             Height="300" Width="450" ResizeMode="NoResize" ShowInTaskbar="False" DataContext="vm:SettingsViewModel">
    <Window.Resources>
        <converters:InstallTypeConverter x:Key="InstallTypeConverter"/>
        <CollectionViewSource x:Key="InstallListSource" d:DesignSource="{d:DesignInstance {x:Type models:BeatSaberInstall}, CreateList=True}"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0">
            <DataGrid ItemsSource="{Binding Path=BeatSaberLocations}" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single" IsManipulationEnabled="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type models:BeatSaberInstall}">
                                <Grid x:Name="InstallRow" Height="50" Background="Blue">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Path=Path}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Path=InstallType, Converter={StaticResource InstallTypeConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <UniformGrid HorizontalAlignment="Right" Rows="1" Columns="3" Grid.Column="1" >
                <Button Margin="0,0,10,0" MinWidth="70" Click="okButton_Click">
                    <TextBlock Text="OK"/>
                </Button>
                <Button Margin="0,0,10,0" Click="cancelButton_Click">
                    <TextBlock Text="Cancel"/>
                </Button>
                <Button Click="applyButton_Click">
                    <TextBlock Text="Apply"/>
                </Button>
            </UniformGrid>
        </Grid>

    </Grid>
</Window>
